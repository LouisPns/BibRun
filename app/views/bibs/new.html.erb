<div class="well">
  <div class="container-fluid">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
    <h2>New bib</h2>
    <%= simple_form_for @bib do |f| %>
      <%= f.association :race, label: "Race" %>
      <p><i class = "fa fa-plus"> <%= link_to "Add new race", new_race_path %></i></p>
      <%= f.input :price, label: "Bib details", placeholder: "Price (â‚¬)" %>
      <%= f.input :quantity, label: false, placeholder: "Quantity" %>
      <%= f.input :sale_reason, placeholder: "Sale reason", collection: ["Disabled", "Forgotten", "Absent", "Injured"], selected: "Select your sale reason" %>
      <%= f.button :submit, class: "btn btn-success btn-block" %>
    <% end %>
    </div>
  </div>
</div>
