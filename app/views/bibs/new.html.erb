<div class="well">
  <div class="container-fluid">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h2>Je vends un dossard :</h2>

      <%= simple_form_for @bib do |f| %>
        <%= f.association :race, label: "Course" %>
        <p><i class = "fa fa-plus"> <%= link_to "Ajouter une course ?", new_race_path %></i></p>
        <%= f.input :price, placeholder: "Prix du dossard" %>
        <%#= f.input :quantity, label: false, placeholder: "Quantity" %>
        <%= f.input :sale_reason, placeholder: "Raison de la vente", collection: [ "Malade", "Blessé(e)", "Autre"] %>
        <%= f.button :submit, label: "Déposer mon dossard", class: "btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>
</div>
