 <!-- current_user.inspect  -->

 <div class="profile-header-wrapper" style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,3)), url('urban_trail.jpg');">
  <div class="container profile-header-container text-center">
    <div class="profile-header-infos">
      <%=image_tag current_user.picture.url(:bright_face), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <h1><%= current_user.first_name%> <%= current_user.last_name%></h1>
      <%= link_to "New bib", new_bib_path, {class: "label label-info"} %>
      <h2><%= current_user.level%></h2>
    </div>
    <div class="tabs">
      <a class="tab active" data-target="#my-bibs">
        <h3>My Bibs & Bales</h3>
        <p><%=@current_user.bibs.count %></p>
      </a>
      <a class="tab" data-target="#purchaces">
       <h3>My Purchases</h3>
       <p><%=@current_user.orders.count%> bibs</p>
     </a>
   </div>
 </div>
</div>

<div class="container ">
  <div class="tab-content" data-target="my-bibs" id="my-bibs">
    <% @bibs.each do |bib| %>
    <div class="product">
      <img src="cross.jpg" alt="race" class="product-image">
      <div class='product-body'>
        <h3><%=bib.race.name%></h3>
        <p><%=bib.race.date%>| <%=bib.race.race_type%> | <%=bib.race.race_distance%> km | <%=bib.race.label%></p>
        <h2><span class="label label-info"><%= bib.price %>€</span></h2>
        <span class="label label-default"><strong>Sold</strong> to Louis (10/04/2016)</span>
      </div>
    </div>
    <% end %>
  </div>
  <div class="tab-content hidden" id="purchaces">
    <% @current_user.orders.each do |o| %>
    <div class="product">
     <img src="cross.jpg" alt="race" class="product-image">
     <div class='product-body'>
      <h3><%=o.bib.race.name%></h3>
      <p><%=o.bib.race.date%>| <%=o.bib.race.race_type%> | <%=o.bib.race.race_distance%> km | <%=o.bib.race.label%></p>
      <h2><span class="label label-info"><%= o.bib.price %>€</span></h2>
      <% end %>
      <span class="label label-default"><strong>Bought</strong> to Louis (10/04/2016)</span>
    </div>
  </div>
</div>

</div>





